# Simplified Azure Dockerfile based on original Dockerfile
# Only adds SSL/TLS support for Azure PostgreSQL connectivity

FROM agnohq/python:3.12

ARG USER=app
ARG APP_DIR=/app
ENV APP_DIR=${APP_DIR}

# Add environment variables for Azure production
ENV ENVIRONMENT=production
ENV PYTHONUNBUFFERED=1

# Install ca-certificates for SSL connections to Azure PostgreSQL and create user
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && groupadd -g 61000 ${USER} \
    && useradd -g 61000 -u 61000 -ms /bin/bash -d ${APP_DIR} ${USER}

WORKDIR ${APP_DIR}

# Copy requirements.txt
COPY requirements.txt ./

# Install requirements
RUN uv pip sync requirements.txt --system

# Copy project files
COPY . .

# Set permissions for the /app directory
RUN chown -R ${USER}:${USER} ${APP_DIR}

# Switch to non-root user
USER ${USER}

# Expose port for Azure services
EXPOSE 8000

# Use uvicorn directly for Azure deployment
ENTRYPOINT ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
